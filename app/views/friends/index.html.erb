
<% if user_signed_in? %>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
    </tr>
  </thead>
  <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
    <tr>
      <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.twitter %></td>
      <!--<td><% friend.user_id %></td>
      <td><% link_to 'Show', friend %></td>
      <td><% link_to 'Edit', edit_friend_path(friend) %></td>
      <td><% link_to 'Delete', friend, data: {'turbo-method': :delete, 'turbo-confirm': 'Are you sure?'}, class: "btn btn-outline-danger btn-sm" %></td>-->
    </tr>
      <% end %>
      <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-dark" %>

<% else %>

<h1>Hello World</h1>
<p>webp</p>

<% end %>